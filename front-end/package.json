{
  "name": "frontend-gastos",
  "version": "1.0.0",
  "description": "Controle de Gastos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "keywords": [],
  "author": "Rafael",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "doodle.css": "^0.0.2",
    "node-fetch": "^3.3.2",
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.rafael.controlegastos",
    "productName": "ControleGastos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "pages/**/*",
      "css/**/*",
      "scripts/**/*",
      "backend/**/*",
      "jre/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "jre/",
        "to": "jre/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/images/icon.ico",
      "publisherName": "Rafael Dev"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "copyright": "Copyright Â© 2025 Rafael"
  }
}